<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_test_peserta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="left"
    tools:context="com.example.app.sdc.TestPraktekAll">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorPrimaryDark"
    android:gravity="left">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Penguji :"
        android:background="@color/colorPrimaryDark"
        android:textColor="#fff"
        android:textSize="20dp"
        android:padding="5dp"
        android:id="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sukri"
        android:layout_marginStart="20sp"
        android:textColor="#fff"
        android:padding="5dp"
        android:textSize="20dp"
        android:id="@+id/penguji2" />
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Peserta : "
        android:textSize="20dp"
        android:textColor="#000"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/text_peserta"
        />

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:background="@color/colorAccent"
        android:textColor="#fff"
        android:id="@+id/peserta"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:background="@color/colorAccent"
        android:id="@+id/jenis_tes"
        android:textColor="#fff"
        android:textAlignment="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginStart="20sp"
        />
</LinearLayout>

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabs"
        app:pstsShouldExpand="true"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        app:pstsTabPaddingLeftRight="14dp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="350sp">
        </android.support.v4.view.ViewPager>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/bsubmit"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:layout_margin="10sp"/>

</LinearLayout>
